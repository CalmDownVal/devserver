{
	"name": "@calmdownval/devserver",
	"description": "A simple HTTP dev server library with live-reload.",
	"version": "1.1.0",
	"license": "ISC",
	"main": "./build/index.cjs.min.js",
	"module": "./build/index.esm.min.mjs",
	"types": "./build/index.d.ts",
	"exports": {
		".": {
			"require": "./build/index.cjs.min.js",
			"import": "./build/index.esm.min.mjs",
			"types": "./build/index.d.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/CalmDownVal/devserver.git"
	},
	"keywords": [
		"development",
		"server",
		"http",
		"livereload"
	],
	"scripts": {
		"build": "rollup --config",
		"lint": "eslint ./src/**/*.ts",
		"prepublishOnly": "yarn build"
	},
	"devDependencies": {
		"@calmdownval/eslint-config": "1.0.1",
		"@calmdownval/eslint-import-resolver-typescript": "1.1.0",
		"@rollup/plugin-typescript": "8.3.1",
		"@typescript-eslint/eslint-plugin": "5.13.0",
		"@typescript-eslint/parser": "5.13.0",
		"@types/node": "17.0.21",
		"eslint": "8.10.0",
		"eslint-plugin-import": "2.25.4",
		"rollup": "2.69.0",
		"rollup-plugin-delete": "2.0.0",
		"rollup-plugin-dts": "4.2.0",
		"rollup-plugin-node-externals": "4.0.0",
		"rollup-plugin-terser": "7.0.2",
		"tslib": "2.3.1",
		"typescript": "4.6.2"
	}
}
